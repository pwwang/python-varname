[TAGIT]
; The change log file to check when version is mentioned.
changelog = py:False

; Whether publish the package after the tag pushed to server.
publish = py:False

; Whether check the version (__version__) in source file.
checksource = py:False

; Whether check the version in pyproject.toml file.
checktoml = py:False

; The source file or the package name.
versource = varname

; The toml file, typically pyproject.toml.
vertoml = ./pyproject.toml

; Which part of the version to increment for auto-tagging.
increment = patch

; Extra commands to run before tag committed and pushed.
; extra = py:'python api.py > docs/api.md'
